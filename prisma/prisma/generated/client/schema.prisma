generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  contact    String?
  age        Int?
  location   String?
  profession String?
  bio        String?
  skills     String?
  imageUrl   String?
  password   String
  createdAt  DateTime @default(now())
  stories    Story[]
}

model Story {
  id          Int      @id @default(autoincrement())
  userId      Int
  name        String
  partnerName String
  storyText   String
  dateOfMatch DateTime
  imageUrl    String?
  profile     Profile  @relation(fields: [userId], references: [id])
}
